{
  "name": "Test Chain Show ChatBubble v1.0",
  "plugins": ["core", "jsonlogic", "obs"],
  "links": [
    {
      "plugin": "obs",
      "on": "CurrentProgramSceneChanged"
    },
    {
      "plugin": "jsonlogic",
      "link": "evaluate",
      "params": {
        "==": ["{event.sceneName}", "Scene"]
      }
    },
    {
      "plugin": "core",
      "link": "Set",
      "params": {
        "path": "lastScene",
        "value": "{event.sceneName}"
      }
    },
    {
      "plugin": "core",
      "link": "Wait",
      "params": {
        "amount": 5000
      }
    },
    {
      "plugin": "obs",
      "link": "SetSceneItemEnabled",
      "params": {
        "sceneName": "{event.sceneName}",
        "sceneItemEnabled": true,
        "sourceName": "ChatBubble"
      }
    }
  ]
}
